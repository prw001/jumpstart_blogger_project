<h1>All Articles</h1>

<ul id = "articles">
	<% @articles.each do |article|%>
		<li>
			<%= link_to article.title, article_path(article) %>
		</li>
	<% end %>

	<%= link_to "Create a New Article", new_article_path, class: 'article_title' %><br /><br />
	<%= link_to "List of Article Tags", tags_path %>
</ul>