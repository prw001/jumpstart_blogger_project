<h4 class="comment_title"><i>Post a Comment</i></h3>

<%= form_for [ @article, @comment ] do |f| %>
	<p class = "comment_label">
		<%= f.label :author_name, "Your Name -" %><br/>
		<%= f.text_field :author_name, :required =>true, :class =>"comment_text", :id => "comment_author", :maxlength => 20 %>
	</p>
	<p class = "comment_label">
		<%= f.label :body, "Your Comment (500 char. limit) -" %><br />
		<%= f.text_area :body, :required => true, :class =>"comment_text", :id => "comment_field", :maxlength => 500 %>
	</p>
		<%= f.submit 'Submit'%>
	</p>
<% end %>