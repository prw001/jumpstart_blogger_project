	<%= form_tag("/show", method: 'get') do %>
		<% months = ['01 - Jan', '02 - Feb', '03 - Mar', '04 - Apr', '05 - May', '06 - Jun', '07 - Jul', '08 - Aug', '09 - Sept', '10 - Oct', '11 - Nov', '12 - Dec'] %>
		<% years = ['2016', '2017', '2018'] %>
		<%= label_tag 'Select Month:' %><br/>
		<%= select_tag('month', options_for_select(months, 'Jan'), {:class => 'navbar_select_field'}) %><br/>
		<%= label_tag 'Select Year:' %><br/>
		<%= select_tag('year', options_for_select(years, '2018'), {:class => 'navbar_select_field'})%><br/>
		<%= submit_tag("search", {:id => 'navbar_submit_button'}) %>
	<% end %>